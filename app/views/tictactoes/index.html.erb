<div div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" align="center">
<% if Tictactoe.find_by("user_id1 = ? OR user_id2 = ?", current_user.id, current_user.id) %>
<ul>
  <% Tictactoe.where("user_id1 = ? OR user_id2 = ?", current_user.id, current_user.id).each do |x| %>
    <li><%= link_to "Game #{x.id}", tictacto_path(x.id) %><br><%= "#{User.find(x.user_id1).email}" %><br><%= "#{User.find(x.user_id2).email}" %><br><%= "Created on: #{x.created_at}" %><br><%= "Last move: #{x.updated_at}"%></li>
  <% end %>
</ul>
<% else %>
<h1>Please start a new game!</h1>
<% end %>
</div>